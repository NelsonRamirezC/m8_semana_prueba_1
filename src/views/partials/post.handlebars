<div class="card my-2 postCards">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{imagen}}" class="img-fluid rounded-start" alt="imagen">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{titulo}}</h5>
        <p class="card-text">{{contenido}}</p>
        <p class="card-text">Autor: {{nombre}} {{apellido}}</p>
        <p class="card-text"><small class="text-body-secondary">Fecha creaci√≥n: {{creacion}}</small></p>
        {{#if boton}}
        <a href="/posts/detalle/{{id}}" class="btn btn-primary">Ver detalles</a>
        {{/if}}
      </div>
    </div>
  </div>
</div>


<style>
    .postCards img{
        width: 100%;
        height: 35vh;
    }
</style>